<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="BasicNavigation.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BasicNavigation">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <!-- 亮色主题资源 -->
            <SolidColorBrush x:Key="LightBackground" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="LightForeground" Color="#000000"/>

            <!-- 暗色主题资源 -->
            <SolidColorBrush x:Key="DarkBackground" Color="#333333"/>
            <SolidColorBrush x:Key="DarkForeground" Color="#FFFFFF"/>

            <!-- 默认主题资源（例如，在应用启动时使用） -->
            <SolidColorBrush x:Key="AppBackground" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="AppForeground" Color="#000000"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
